@model ProfileVM
@{
    ViewData["Title"] = "Profile";
}



<h1>Profile</h1>
<div class="mb-3">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" for="exampleFormControlInput1" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text text-danger"></span>
        </div><div class="form-group">
            <label asp-for="UserName" for="exampleFormControlInput1" class="form-label">Username</label>
            <input asp-for="UserName" class="form-control" placeholder="UserName">
            <span asp-validation-for="UserName" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" for="exampleFormControlInput1" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CurrentPassword" for="exampleFormControlInput1" class="form-label">Current Password</label>
            <input asp-for="CurrentPassword" class="form-control" placeholder="CurrentPassword">
            <span asp-validation-for="CurrentPassword" class="text text-danger"></span>
        </div> <div class="form-group">
            <label asp-for="Password" for="exampleFormControlInput1" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class="text text-danger"></span>
        </div> <div class="form-group">
            <label asp-for="ConfirmPassword" for="exampleFormControlInput1" class="form-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword" class="text text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary">Update</button>
    </form>

</div>
