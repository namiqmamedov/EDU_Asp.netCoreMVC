@model Event

@{
    ViewData["Title"] = "Create";
    IEnumerable<Category> categories = ViewBag.Categories;
    IEnumerable<Tag> tags = ViewBag.Tags;

    SelectList selectListCategoriesItems = new SelectList(categories, nameof(Category.Id), nameof(Category.Name));
    SelectList selectListTagsItems = new SelectList(tags, nameof(Tag.Id), nameof(Tag.Name));

}


<h1>Create Event</h1>
<div class="mb-3 d-flex justify-content-center">
    <form style="width: 850px;" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="form-label"></label>
            <input asp-for="Date" class="form-control">
            <span asp-validation-for="Date" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="File"></label>
            <input asp-for="File" type="file" accept="image/jpeg" class="form-control">
            <span asp-validation-for="File " class="text text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="EventDate" class="form-label"></label>
            <input asp-for="EventDate" class="form-control">
            <span asp-validation-for="EventDate" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Venue" class="form-label"></label>
            <input asp-for="Venue" class="form-control">
            <span asp-validation-for="Venue" class="text text-danger"></span>
        </div>
        <div id="parentList" class="form-group">
            <label>Category</label>
            <select asp-for="CategoryId" class="form-control" asp-items="selectListCategoriesItems">
            </select>
        </div>
        <div id="parentList" class="form-group">
            <label>Tag</label>
            <select asp-for="TagIds" class="form-control" asp-items="selectListTagsItems">
            </select>
            <span asp-validation-for="TagIds" class="text text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

@section script{
    @await Html.PartialAsync("_ValidationPartial")
}
