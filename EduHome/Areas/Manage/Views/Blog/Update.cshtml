@model Blog

@{
    ViewData["Title"] = "Update";
    IEnumerable<Tag> tags = ViewBag.Tags;

    SelectList selectListTagsItems = new SelectList(tags, nameof(Tag.Id), nameof(Tag.Name));

}


<h1 class="text-center">Update Blog</h1>
<div class="mb-3 d-flex justify-content-center">
    <form style="width: 850px;" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BlogDate" class="form-label"></label>
            <input asp-for="BlogDate" class="form-control">
            <span asp-validation-for="BlogDate" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="File"></label>
            <input asp-for="File" type="file" accept="image/jpeg" class="form-control">
            <span asp-validation-for="File " class="text text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text text-danger"></span>
        </div>
        <div id="parentList" class="form-group">
            <label>Tag</label>
            <select asp-for="TagIds" class="form-control" asp-items="selectListTagsItems">
            </select>
            <span asp-validation-for="TagIds" class="text text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>

@section script{
    @await Html.PartialAsync("_ValidationPartial")
}
