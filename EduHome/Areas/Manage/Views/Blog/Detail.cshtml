@model Blog

<div class="blog-details-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-details">
                    <div class="blog-details-img">
                        <img style="width: 100%;" src="~/assets/img/blog/@Model.Image" alt="blog-details">
                    </div>
                    <div class="blog-details-content">
                        <h2>@Model.Title</h2>
                        <p>By @Model.Name  /  @Model.BlogDate.ToString("d, MMMe yyyy") /  <i class="fa fa-comments-o"></i> 1</p>
                        @foreach (BlogDescription description in Model.BlogDescriptions)
                        {
            <p>@description.SimpleDescription</p>
                            <p class="quote">@description.QuoteDescription</p>}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    
              
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            @foreach (BlogTag tags in Model.BlogTags)
                            {
                <a href="blog-details.html" class="mr-10 mb-10">@tags.Tag.Name</a>}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>