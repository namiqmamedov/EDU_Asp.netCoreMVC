@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
    int counter = 1;
}


<div class="row justify-content-between mt-5">
    <div class="col-lg-2">
        <h1 style="margin-left: 44px;min-width:200px;" class="h3 mb-4 text-gray-800">Category Page</h1>
    </div>
    <div class="col-lg-1">
        <a style="margin-left: -4.3rem;" asp-area="manage" asp-controller="category" asp-action="Create" class="btn btn-primary">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table style="width: 93%; margin-left: auto; margin-right: auto;" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nº</th>
                    <th>Name</th>
                    <th>Setting</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model)
                {
                    <tr>
                        <td style="width: 15%;">@counter</td>
                        <td style="width: 28%;">@category.Name </td>
                        <td>
                            <div style="word-spacing: 16px;" class="buttons">
                                <a style="width: 21.8%;" asp-area="manage" asp-action="update" asp-route-id="@category.Id" class="btn btn-warning">Update</a>
                                <a style="width: 21.8%;" asp-area="manage" asp-action="delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                                <a style="width: 21.8%;" class="btn btn-primary">Detail</a>
                            </div>

                        </td>
                    </tr>

                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>


