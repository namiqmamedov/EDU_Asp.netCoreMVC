
@model CourseVM

@{
    ViewData["Title"] = "Index";
}

@await Component.InvokeAsync("Header", Model)


<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input type="search" placeholder="Search..." name="search" />
                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Course course in Model.Courses)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course mb-70">
                        <div class="course-img">
                            <a asp-controller="course" asp-action="coursedetail" asp-route-id="@course.Id">
                                <img  src="~/assets/img/course/@course.Image" alt="course">
                                <div class="course-hover">
                                    <a asp-controller="course" asp-action="coursedetail" asp-route-id="@course.Id"><i class="fa fa-link"></i></a>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a asp-controller="course" asp-action="coursedetail" asp-route-id="@course.Id">@course.Title</a></h3>
                            <p>@course.Description</p>
                            <a class="default-btn" asp-controller="course" asp-action="coursedetail" asp-route-id="@course.Id">read more</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>



