@model AboutVM



<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>about us</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- About Start -->
@await Component.InvokeAsync("AboutContent",Model)
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/assets/img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Teacher teacher in Model.Teachers.Take(4))
            {
        <div class="col-md-3 col-sm-4 col-xs-12">
            <div class="single-teacher">
                <div class="single-teacher-img">
                    <a asp-controller="teacher" asp-action="teacherdetail" asp-route-id="@teacher.Id"><img src="~/assets/img/teacher/@teacher.Image" alt="teacher"></a>
                </div>
                <div class="single-teacher-content text-center">
                    <h2><a asp-controller="teacher" asp-action="teacherdetail" asp-route-id="@teacher.Id">@teacher.Fullname</a></h2>
                    <h4>@teacher.Rank</h4>
                    <ul>
                        <li><a href="@teacher.FacebookURL"><i class="zmdi zmdi-facebook"></i></a></li>
                        <li><a href="@teacher.PinterestURL"><i class="zmdi zmdi-pinterest"></i></a></li>
                        <li><a href="@teacher.VimeoURL"><i class="zmdi zmdi-vimeo"></i></a></li>
                        <li><a href="@teacher.TwitterURL"><i class="zmdi zmdi-twitter"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>            }


        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial -->
@await Component.InvokeAsync("Testimonial", Model)
<!-- END -->
<!-- Notice Start -->
<section class="notice-area two pt-140 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>TAKE A VIDEO TOUR</h3>
                    <div class="notice-video">
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="@Model.AboutVideos.First().VideoPopup">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        @await Component.InvokeAsync("AboutNotice", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
